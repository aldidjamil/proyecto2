<div class="container">
    <section class="h-100 gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-9 col-xl-7">
                    <div class="card">
                        <div class="rounded-top text-white d-flex flex-row"
                            style="background-color: #000; height:200px;">
                            <div class="ms-4 mb-2 d-flex flex-column" style="width: 150px;">
                                <img src="{{user.avatar}}" alt="Generic placeholder image"
                                    class="img-fluid img-thumbnail mt-4 mb-2" style="width: 150px; z-index: 1">
                            </div>
                            <div class="ms-3" style="margin-top: 130px;">
                                <h5>{{user.username}}</h5>

                            </div>
                        </div>
                        <div class="card-body mt-4 p-4 text-black">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <p class="lead fw-normal mb-0">Favorite Movies</p>
                            </div>

                            <form action="/user/deleteMovie/{{movie.id}}" method="POST">
                                <div class="row g-2">
                                    <div class="col mb-2">
                                        {{#each favMovies}}
                                        <img src="{{image}}" alt="image 1" class="w-100 rounded-3">
                                        <input type="submit" formaction="/user/deleteMovie/delFav/{{id}}" value="DELETE"
                                            class="btn btn-danger mt-2">
                                        <a class="text-center" href="/movie/details/{{id}}"> GET MOVIE DETAILS
                                        </a>
                                        {{/each}}

                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <p class="lead fw-normal mb-0">Watch List</p>
                                </div>

                                <div class="col mb-2">
                                    <div class="row g-2">
                                        {{#each watchList}}
                                        <img src="{{image}}" class="w-100 rounded-3">
                                        <input type="submit" formaction="/user/deleteMovie/delWat/{{id}}" value="DELETE"
                                            class="btn btn-danger mt-2">
                                        <a class="text-center" href="/movie/details/{{id}}"> GET MOVIE DETAILS </a>
                                        {{/each}}
                                    </div>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</section>