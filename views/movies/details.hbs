<div class="container">

    <h1> {{movie.title}}</h1>
    <hr>
    <img class="imgMov" src="{{movie.image}}" alt="">
    <hr>
    <p>Plot: {{movie.plot}}</p>
    <hr>
    <p>Stars: {{movie.stars}}</p>
    <hr>
    <p>Genres: {{movie.genres}}</p>
    <hr>
    <p>Year: {{movie.year}}</p>
    <hr>
    <p>Countries: {{movie.countries}}</p>
    <hr>

    <form action="/user/add_favorite/{{movie.id}}" method="POST">
        <input type="submit" value="Add to favorite" class="btn btn-primary mt-3">
    </form>
    <a href="/" class="btn btn-dark mt-3">Return to index</a>

</div>