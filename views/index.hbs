<div class="container">

    <h1 class="mt-5 text-center ">MOVIES</h1>
    <p class="ptext text-center">Already part of the Community? Log in now.</p>
    <img class="mt-3 text-center "
        src="https://larepublica.cronosmedia.glr.pe/migration/images/GET4O56FWJGU7NQECGWM2WUXGI.jpg" alt="">
    <p class="ptext text-center">Already part of the Community? Log in now.</p>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 mt-2">
                <h1 class="ptext text-center">Log in</h1>
                <hr>
                <form action="/login-form" method="POST">
                    <div class="mb-3 row">
                        <div class="col">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email">
                            <div class="form-text">Required</div>
                        </div>
                        <div class="col">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                            <div class="form-text">Required</div>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark block">Log in</button>
                    </div>
                    <p class="ptext text-center mt-4">Register and Save all your favorite Movies!</p>
                    <button class="btn btn-dark text-center">Sign up now!</button>
                    <h1 class="ptext text-center mt-5">Never miss again that Movie your friend told you!</h1>

                    {{!-- {{#if errorMessage}}
                    <div id="errorMessage">
                        <p>{{errorMessage}}</p>
                    </div>
                    {{/if}} --}}

                </form>
            </div>
        </div>
    </div>






</div>